{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "ScriptHost"],
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "typeRoots": ["./node_modules/phaser/types"],
  "types": ["Phaser"],
  "include": ["./src"]
}
